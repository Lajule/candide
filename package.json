{
  "private": true,
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-preset-env": "^1.6.1",
    "http-serve": "^1.0.1",
    "parcel-bundler": "^1.7.1",
    "postcss-import": "^11.1.0",
    "prettier": "^1.12.1",
    "shx": "^0.2.2"
  },
  "dependencies": {
    "angular": "^1.6.10",
    "angular-translate": "^2.17.1",
    "balloon-css": "^0.5.0",
    "codemirror": "^5.37.0",
    "flatpickr": "^4.4.4",
    "font-awesome": "^4.7.0",
    "jspdf": "^1.3.5",
    "milligram": "^1.3.0",
    "normalize.css": "^8.0.0",
    "tinymce": "^4.7.11"
  },
  "scripts": {
    "prebuild": "shx mkdir -p dist",
    "bundle": "parcel build -d dist index.html",
    "resources:favicon": "shx cp favicon.ico dist",
    "resources:skins": "shx cp -R node_modules/tinymce/skins dist",
    "resources": "npm run resources:favicon && npm run resources:skins",
    "build": "npm run bundle && npm run resources",
    "postinstall": "npm run build",
    "start": "hs dist"
  }
}
